<div class="container py-5 h-100">
  <div class="row d-flex justify-content-center align-items-center h-100">
    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
      <div class="card bg-dark text-white" style="border-radius: 1rem;">
        <div class="card-body p-5 text-center">
          <h2 class="container justify-content-center">Nueva reserva</h2>
          <h5>Selecciona las fechas de tu nueva reserva</h5>
          <div class="container justify-content-center align-items-center h-100">

            <%= form_with(model: reserva) do |form| %>
              <% if reserva.errors.any? %>
                <div style="color: red">
                  <h2> Ingresa una fecha válida</h2>
                  <%= link_to "Volver", cabana_path($cabanaid) %>
                </div>
              <% else %>

              <div>
                <%= $cabananombre %>
                <%= form.label :fecha_de_inicio, style: "display: block" %>
                <%= form.date_field :start_time, class: "form-control form-control-lg" %>
              </div>

              <div>
                <%= form.label :fecha_de_término, style: "display: block" %>
                <%= form.date_field :end_time, class: "form-control form-control-lg" %>
              </div>

              <div class="actions">
                <%= form.submit "Reservar", data: {turbo: false}, class: "btn btn-outline-light btn-lg px-5 mt-3" %>
              </div>

              <% end %>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>